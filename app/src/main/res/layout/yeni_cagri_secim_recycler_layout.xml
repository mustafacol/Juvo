<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    android:layout_margin="20dp">


    <LinearLayout
        android:id="@+id/yeni_cagri_secim_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        >


        <TextView
            android:id="@+id/yeni_cagri_secim_item_textview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:fontFamily="@font/roboto_light"
            android:gravity="left|center"
            android:layout_marginLeft="10dp"
            android:text="TextView"
            android:textColor="#656565"
            android:textSize="16dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right">

            <CheckBox
                android:id="@+id/yeni_cagri_secim_item_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:checked="false"
                android:button="@drawable/checkbox_frame"
                />
        </LinearLayout>

        <Button
            android:id="@+id/yeni_cagri_secim_item_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:fontFamily="@font/roboto_light"
            android:text="Tamam"
            android:textStyle="bold"
            android:textColor="#656565"
            android:textSize="12dp"

            />


    </LinearLayout>
</androidx.cardview.widget.CardView>